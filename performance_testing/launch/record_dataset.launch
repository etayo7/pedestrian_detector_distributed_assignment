<launch>
  <!-- Arguments -->
  <arg name="launch_cam_node"     default="false"/>
  <arg name="robot"               default="1"/>
  <arg name="dataset_prefix"      default="ds"/>
  
  <!-- Launch camera node if requested-->
  <group if="$(arg launch_cam_node)">
    <include file="$(find camera_node)/launch/camera_node.launch">
      <arg name="robot"		                 value="$(arg robot)"/>
      <arg name="required"                 value="true"/>
    </include>
  </group>


  <node pkg="rosbag" type="record" ns="r_$(arg robot)" name="recorder" args="record -o $(find performance_testing)/datasets/$(arg dataset_prefix) /r_$(arg robot)/camera/color/image_raw/compressed -b 1024" />
</launch>
